                                        padding-top: 10px;
                                        padding-bottom: 10px;
                                        Text {
                                            text: email.sender;
                                            color: is_dark ? #ffffff : #323130;
                                            font-weight: 600;
                                            font-size: 14px;
                                        }
                                        Text {
                                            text: email.subject + (email.has_attachment ? " üìé" : "");
                                            color: active_email_subject == email.subject ? #0078d4 : (is_dark ? #bbbbbb : #605e5c);
                                            font-weight: active_email_subject == email.subject ? 600 : 400;
                                            font-size: 13px;
                                        }
