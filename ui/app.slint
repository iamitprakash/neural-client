                    TouchArea {
                        mouse-cursor: pointer;
                        clicked => { active_tab = "chat"; }
                        Text { text: "AI Chat"; color: active_tab == "chat" ? #007aff : #888888; font-weight: active_tab == "chat" ? 600 : 400; }
