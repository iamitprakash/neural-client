                                            HorizontalBox {
                                                padding-left: 12px;
                                                padding-right: 12px;
                                                padding-top: 10px;
                                                padding-bottom: 10px;
                                                
                                                TextInput {
                                                    text: msg.text;
                                                    color: msg.is_user ? #ffffff : (is_dark ? #ffffff : #323130);
